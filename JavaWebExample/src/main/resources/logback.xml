<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE-ENGINE" class="ch.qos.logback.core.FileAppender">
        <file>${log.name}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>	

    <root level="error">
        <appender-ref ref="FILE-ENGINE" />
    </root>

</configuration>